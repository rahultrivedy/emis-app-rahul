<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFFE4"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.saysweb.emis_app.EnrollmentByGrade">

        <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/my_toolbar3"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingTop="10dp"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:background="?attr/colorPrimary"-->
            <!--android:elevation="4dp"-->
            <!--android:theme="@style/ThemeOverlay.AppCompat.ActionBar"-->
            <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ENROLMENT BY GRADE"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/edit_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:onClick="onEditEbg"
                android:text="EDIT"
                android:textColor="#fff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="BIRTH YEAR"
                android:textColor="#2c3e50"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAllCaps="true"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:inputType="number"
                android:background="@drawable/back"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:id="@+id/birth_year_entry"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grade"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#2c3e50"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAllCaps="true"
                />

            <Spinner
                android:id="@+id/grade"
                android:layout_width="0dp"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_weight="1"
                android:padding="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Male"
                android:gravity="left"
                android:layout_weight="1"
                android:textColor="#2c3e50"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAllCaps="true"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:inputType="number"
                android:gravity="center_horizontal"
                android:background="@drawable/back"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:id="@+id/male_entry"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Female"
                android:gravity="left"
                android:textColor="#2c3e50"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAllCaps="true"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:inputType="number"
                android:gravity="center_horizontal"
                android:background="@drawable/back"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:id="@+id/female_entry"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Total"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_entry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="0"
                android:textColor="#03A9F4"
                android:textSize="20sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:backgroundTint="#66BB6A"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:id="@+id/save_entry"
                android:onClick="onSaveEbg"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:backgroundTint="#d32f2f"
                android:textColor="#fff"
                android:layout_toLeftOf="@id/save_entry"
                android:layout_marginTop="30dp"
                android:id="@+id/delete_entry"
                android:onClick="onDeleteEbg"
                android:visibility="gone"/>


        </RelativeLayout>


    </LinearLayout>

</ScrollView>
