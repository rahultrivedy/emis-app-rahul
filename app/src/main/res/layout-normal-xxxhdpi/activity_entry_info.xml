<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.saysweb.emis_app.EntryInfo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="sample"
            android:background="#CFD8DC"
            android:elevation="20dp"
            android:textColor="#424242"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/sample_tv"
            android:onClick="onClickEBG">

        </TextView>




        <AutoCompleteTextView
            android:id="@+id/school_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SEARCH SCHOOL"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:imeOptions="flagNoExtractUi"
            android:clickable="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ENROLLMENT BY GRADE"
            android:background="#CFD8DC"
            android:elevation="20dp"
            android:textColor="#424242"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/titleEBG"
            android:onClick="onClickEBG">

        </TextView>




        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:layout_marginTop="4dp"
            android:background="#C8E6C9"
            android:id="@+id/horizontalScroll"
            android:scrollIndicators="bottom"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                android:id="@+id/maintable"

                >

            </TableLayout>

        </HorizontalScrollView>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:layout_marginTop="4dp"
            android:background="#C8E6C9"
            android:id="@+id/horizontalScrollSearch"
            android:scrollIndicators="bottom"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                android:id="@+id/maintableSearch"

                >

            </TableLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GRADE CLASS COUNT"
            android:textColor="#424242"
            android:background="#CFD8DC"
            android:elevation="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/titleGCC"
            android:onClick="onClickGCC">

        </TextView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:layout_marginTop="4dp"
            android:background="#D1C4E9"
            android:id="@+id/horizontalScroll1"
            android:scrollIndicators="bottom"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                android:id="@+id/maintableGCC" >
            </TableLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BOARDING ENROLLMENT"
            android:layout_marginTop="15dp"
            android:background="#CFD8DC"
            android:elevation="20dp"
            android:textColor="#424242"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/titleEB"
            android:onClick="onClickEB">

        </TextView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:background="#FFE0B2"
            android:layout_marginTop="4dp"
            android:scrollIndicators="bottom"
            android:id="@+id/horizontalScroll2"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                android:id="@+id/maintableEB" >
            </TableLayout>

        </HorizontalScrollView>


    </LinearLayout>

</ScrollView>
